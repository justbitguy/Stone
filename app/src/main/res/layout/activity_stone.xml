<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="8dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/stone"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stone"
            android:gravity="left|center_vertical"
            android:textSize="20dp"
            android:textColor="@color/color_FF17E269"/>

    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/stone_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v4.view.PagerTitleStrip
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top" />
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/layout_bottom_tool"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_3E4E586A"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/layout_bottom_tool_first"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center"
                android:layout_height="60dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/layout_bottom_tool_first_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/button"/>
                <TextView
                    android:id="@+id/layout_bottom_tool_first_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/index_first"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_bottom_tool_second"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center"
                android:layout_height="60dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/layout_bottom_tool_second_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/button"/>
                <TextView
                    android:id="@+id/layout_bottom_tool_second_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/index_second"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_bottom_tool_third"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center"
                android:layout_height="60dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/layout_bottom_tool_third_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/button"/>
                <TextView
                    android:id="@+id/layout_bottom_tool_third_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/index_third"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>


